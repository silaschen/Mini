/* pages/section/pay.wxss */
@import "../../res/icon.wxss";
.clear{
  background: #fff;
  padding:30rpx 20rpx;
  position: relative;
}
.clear .pull-left{
  width:calc(100% - 160rpx);
}
.clear .pull-left view{
  font-size:32rpx;
  display: flex;
  display: -webkit-flex;
}
.clear .pull-left view image{
  width:50rpx;
  height:50rpx;
  display:block;
  margin-right:20rpx;
}
.clear .pull-right{
  position: absolute;
  right:30rpx;
  top:calc(50% - 40rpx);
  font-size:50rpx;
  color:#129FE7;
  font-weight: bold;
}
/* /个人信息 */
.info{
  margin-top:20rpx;
  background: #fff;
}
.info view.com{
  padding:20rpx;
  font-size:28rpx;
  display: flex;
  align-items:center;
}
.info view i{
  margin-right:20rpx;
}
.info .name i{
  color:#129FE7;
}
.info .tel i{
  color:#1DC6B7;
}
.info .addr i{
  color:#DAB513;
}
button {
  position: fixed;
  bottom: 0;
  width:100%;
}